rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir que usuarios autenticados suban archivos a su carpeta personal
    match /logos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir que usuarios autenticados suban archivos a carpetas p√∫blicas
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
